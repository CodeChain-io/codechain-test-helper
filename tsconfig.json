{
    "compilerOptions": {
        "target": "es2018",
        "types": [
            "node"
        ],
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.test.ts"
    ]
}
